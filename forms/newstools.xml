<?xml version="1.0" encoding="utf-8"?>
<form>
  <fields name="attribs">
     <fieldset name="newsstub" label="PLG_SYSTEM_NEWSTOOLS_FIELDSET_LABEL">
        <field
            name="brand"
            type="sql"
            default="1"
            label="PLG_SYSTEM_NEWSTOOLS_BRAND_LABEL"
            description="PLG_SYSTEM_NEWSTOOLS_BRAND_DESC"
            query="SELECT value, text FROM (SELECT 1 AS rank, NULL AS value, 'None' AS text UNION ALL SELECT 2 AS rank, CONCAT (alias, '-', id) AS value, name AS text FROM #__brands b WHERE b.catid = 171 ORDER BY text) a ORDER BY rank, text;"
            key_field="value"
            value_field="text"
        />
        <field
            name="stub_catid"
            type="category"
            label="PLG_SYSTEM_NEWSTOOLS_STUB_CATID_LABEL"
            description="PLG_SYSTEM_NEWSTOOLS_STUB_CATID_DESC"
            extension="com_content"
            default=""
        >
            <option value="">JNONE</option>
        </field>
     </fieldset>
  </fields>
</form>
